<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.HealthPlaceSelectionActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:background="@color/grey">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.90">
            <Spinner
                android:id="@+id/hp_type_spinner"
                style="@style/spinner_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.10">
            <ImageView
                android:id="@+id/hp_select_list_map_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:contentDescription="@string/map"
                android:src="@android:drawable/ic_dialog_map"
                android:background="@color/grey"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border_cinza"
            android:gravity="center"
            android:clickable="true"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/hp_select_list_search_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/noborder"
                android:hint="@string/action_search"
                android:padding="8dp"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/hp_select_list_search_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:contentDescription="@string/action_search"
                android:src="@android:drawable/ic_menu_search" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hp_select_list_content"
        android:baselineAligned="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fastScrollEnabled="true" />

        <LinearLayout
            android:id="@+id/hp_select_list_index"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:background="@color/grey"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/hp_select_list_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>